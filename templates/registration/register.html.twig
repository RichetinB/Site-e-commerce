{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 border p-4 rounded bg-dark text-white">
                <h1 class="text-center mb-4">Register</h1>

                {{ form_errors(registrationForm) }}
                {{ form_start(registrationForm, {'attr': {'class': 'mb-3'}}) }}

                <div class="mb-3">
                    {{ form_row(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(registrationForm.photo_profil, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>

                <div class="mb-3 form-check">
                    {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}"></label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}