{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="{{ asset('path/to/your/custom.css') }}">
{% endblock %}

{% block body %}
<header class="bg-dark text-white py-2">
    <div class="container">
        <h1 class="text-center">E-Commerce Site</h1>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/sell">Sell</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/cart">View Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/account">Account</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a href="{{ path('app_admin') }}" class="nav-link btn btn-primary">Access Admin Interface</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
            {% if app.user %}
                <ul class="navbar-nav ml-auto">
                    
                    <li class="nav-item">
                        <p class="nav-link">Logged in as {{ app.user.username }}</p>
                    </li>
                    <li class="nav-item">
                        <img src="{{ asset('uploads/lien_image/' ~ app.user.getPhotoProfil()) }}" alt="Profile Photo" style="max-height: 40px;" class="rounded-circle ml-2">
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            {% else %}
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/register">Register</a>
                    </li>
                </ul>
            {% endif %}
        </nav>
    </div>
</header>
    <div class="container mt-4">
        <h1>Your Cart</h1>
        
        {% if cartItems|length > 0 %}
            <a href="{{ path('app_cart_validate') }}" class="btn btn-primary mb-3">Validate Cart</a>
            
            <ul class="list-group">
                {% for cartItem in cartItems %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ cartItem.idArticle.nom }}
                        <span class="badge badge-primary badge-pill">{{ cartItem.idArticle.prix }} â‚¬</span>
                        <a href="{{ path('remove_from_cart', {'id': cartItem.id}) }}" class="btn btn-danger btn-sm ml-2">Remove</a>
                    </li>
                {% endfor %}
            </ul>
             <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Return to Home</a>
        {% else %}
            <div class="alert alert-info" role="alert">
                Your cart is empty
            </div>
            
             <a href="{{ path('app_home') }}" class="btn btn-secondary mt-3">Return to Home</a> 
        {% endif %}
    </div>
{% endblock %}
